<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F2F2"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    >
    <ImageView
        android:id="@+id/item_check_out_item_iv_product_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_check_out_item_tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_iv_product_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Tên sản phẩm"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxWidth="250dp"
        android:maxHeight="18dp"
        />


    <TextView
        android:id="@+id/item_check_out_item_tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/item_check_out_item_tv_product_name"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Giá tiền"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/item_check_out_item_tv_product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/item_check_out_item_tv_product_price"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Kích cỡ: XL"
        android:textColor="@color/black"

        />

    <ImageView
        android:id="@+id/item_check_out_item_color_iv_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@color/black"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_tv_product_size"
        app:layout_constraintTop_toBottomOf="@+id/item_check_out_item_tv_product_price"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/item_check_out_item_tv_productAmountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:padding="0dp"
        android:text="Số lượng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_iv_product_image" />

    <TextView
        android:id="@+id/item_check_out_item_tv_productAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_check_out_item_tv_productAmountTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>


