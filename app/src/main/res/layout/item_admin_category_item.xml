<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/admincategoryitem_tv_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tên category"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admincategoryitem_tv_date"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/admincategoryitem_tv_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Ngày đăng"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/admincategoryitem_btn_editbtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/admincategoryitem_tv_name"
            android:src="@drawable/ic_edit_24dp"
            android:backgroundTint="#F3CE16"
            />

        <ImageButton
            android:id="@+id/admincategoryitem_btn_deletebtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/admincategoryitem_btn_editbtn"
            android:src="@drawable/ic_delete_24dp"
            android:backgroundTint="#F45858"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>