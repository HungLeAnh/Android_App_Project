<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F2F2"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    >
    <ImageView
        android:id="@+id/item_cart_item_iv_product_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_cart_item_tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_iv_product_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Tên sản phẩm"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxWidth="250dp"
        android:maxHeight="18dp"
        />

    <TextView
        android:id="@+id/item_cart_item_tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_item_tv_product_name"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Giá tiền"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/item_cart_item_tv_product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_item_tv_product_price"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Kích cỡ: XL"
        android:textColor="@color/black"

        />

    <ImageView
        android:id="@+id/item_cart_item_color_iv_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@color/black"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_tv_product_size"
        app:layout_constraintTop_toBottomOf="@+id/item_cart_item_tv_product_price"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        />

    <ImageButton
        android:id="@+id/item_cart_item_btn_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/ic_remove_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_iv_product_image" />

    <TextView
        android:id="@+id/item_cart_item_tv_productAmount"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/profileactivity_button_bg"
        android:padding="0dp"
        android:text="0"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_cart_item_btn_plus"
        app:layout_constraintStart_toEndOf="@+id/item_cart_item_btn_minus"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/item_cart_item_btn_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


