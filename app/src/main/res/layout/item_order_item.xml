<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/id_view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/item_order_item_iv_product_image"
            android:layout_width="72dp"
            android:layout_height="71dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item_order_item_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/item_order_item_iv_product_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Tên sản phẩm"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxWidth="250dp"
            android:maxHeight="18dp"
            />


        <TextView
            android:id="@+id/item_order_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Giá tiền"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/item_order_item_tv_product_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Kích cỡ: XL"
            android:textColor="@color/black"

            app:layout_constraintStart_toEndOf="@+id/item_order_item_iv_product_image"
            app:layout_constraintTop_toBottomOf="@+id/item_order_item_tv_product_name" />

        <ImageView
            android:id="@+id/item_order_item_color_iv_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@color/black"
            app:layout_constraintStart_toEndOf="@+id/item_order_item_tv_product_size"
            app:layout_constraintTop_toBottomOf="@+id/item_order_item_tv_product_name" />

        <TextView
            android:id="@+id/item_order_tv_productAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/id_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marign_2"
        android:background="@color/linecolor"
        app:layout_constraintTop_toBottomOf="@+id/orderactivity_top_bar"

        />
</LinearLayout>




